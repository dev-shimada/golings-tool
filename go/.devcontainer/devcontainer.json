{
    "name": "golings-tool",
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile",
        "target": "vscode"
    },
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "GitHub.copilot"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/,target=/workspace,type=bind"
    ],
    "remoteUser": "root",
    "postCreateCommand": "/bin/sh .devcontainer/post_created.sh"
}
